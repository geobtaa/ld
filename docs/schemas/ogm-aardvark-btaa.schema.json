{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gin.btaa.org/ld/schemas/ogm-aardvark-btaa.schema.json",
  "title": "OGM+BTAA Geospatial Aardvark Resource Record",
  "description": "OpenGeoMetadata Aardvark schema fields with BTAA custom elements.",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "gbl_mdVersion_s": { "type": "string", "enum": ["Aardvark"] },
    "gbl_mdModified_dt": { "type": "string", "format": "date-time" },
    "schema_provider_s": { "type": "string" },
    "dct_title_s": { "type": "string" },
    "dct_alternative_sm": { "type": "array", "items": { "type": "string" } },
    "dct_description_sm": { "type": "array", "items": { "type": "string" } },
    "dct_subject_sm": { "type": "array", "items": { "type": "string" } },
    "dct_creator_sm": { "type": "array", "items": { "type": "string" } },
    "dct_publisher_sm": { "type": "array", "items": { "type": "string" } },
    "dct_language_sm": { "type": "array", "items": { "type": "string" } },
    "dct_license_sm": { "type": "array", "items": { "type": "string", "format": "uri" } },
    "dct_rightsHolder_sm": { "type": "array", "items": { "type": "string" } },
    "dct_accessRights_s": { "type": "string", "enum": ["Public", "Restricted"] },
    "gbl_resourceClass_sm": { "type": "array", "items": { "type": "string" } },
    "gbl_resourceType_sm": { "type": "array", "items": { "type": "string" } },
    "dct_source_sm": { "type": "array", "items": { "type": "string" } },
    "dct_isPartOf_sm": { "type": "array", "items": { "type": "string" } },
    "pcdm_memberOf_sm": { "type": "array", "items": { "type": "string" } },
    "dct_replaces_sm": { "type": "array", "items": { "type": "string" } },
    "dct_isReplacedBy_sm": { "type": "array", "items": { "type": "string" } },
    "dct_isVersionOf_sm": { "type": "array", "items": { "type": "string" } },
    "dct_relation_sm": { "type": "array", "items": { "type": "string" } },
    "dct_issued_s": { "type": "string" },
    "dct_temporal_sm": { "type": "array", "items": { "type": "string" } },
    "dct_spatial_sm": { "type": "array", "items": { "type": "string" } },
    "dcat_bbox": { "type": "string" },
    "dcat_centroid": { "type": "string" },
    "locn_geometry": { "type": "string" },
    "layer_geom_type_s": { "type": "string" },
    "solr_year_i": { "type": "integer" },
    "layer_id_s": { "type": "string" },
    "suppressed_b": { "type": "boolean" },
    "dct_references_s": { "type": "string" },

    "b1g_code_s": { "type": "string", "description": "GeoBTAA custom code" },
    "b1g_status_s": { "type": "string" },
    "b1g_dct_accrualMethod_s": { "type": "string" },
    "b1g_dct_accrualPeriodicity_s": { "type": "string" },
    "b1g_dateAccessioned_s": { "type": "string", "format": "date" },
    "b1g_dateRetired_s": { "type": "string", "format": "date" },
    "b1g_child_record_b": { "type": "boolean" },
    "b1g_dct_mediator_sm": { "type": "array", "items": { "type": "string" } },
    "b1g_access_s": { "type": "object", "additionalProperties": { "type": "string", "format": "uri" } },
    "b1g_image_ss": { "type": "string", "format": "uri" },
    "b1g_geonames_sm": { "type": "array", "items": { "type": "string", "format": "uri" } },
    "b1g_publication_state_s": { "type": "string" },
    "b1g_language_sm": { "type": "array", "items": { "type": "string" } },
    "b1g_creatorID_sm": { "type": "array", "items": { "type": "string", "format": "uri" } },
    "b1g_dct_conformsTo_sm": { "type": "array", "items": { "type": "string", "format": "uri" } },
    "b1g_dcat_spatialResolutionInMeters_sm": { "type": "array", "items": { "type": "string" } },
    "b1g_geodcat_spatialResolutionAsText_sm": { "type": "array", "items": { "type": "string" } },
    "b1g_dct_provenanceStatement_sm": { "type": "array", "items": { "type": "string" } },
    "b1g_adminTags_sm": { "type": "array", "items": { "type": "string" } }
  },
  "required": [
    "id",
    "gbl_mdVersion_s",
    "schema_provider_s",
    "dct_title_s",
    "dct_description_sm",
    "dct_language_sm",
    "dct_accessRights_s",
    "dct_license_sm",
    "b1g_code_s",
    "b1g_dct_accrualMethod_s",
    "b1g_dateAccessioned_s",
    "b1g_publication_state_s",
    "b1g_language_sm"
  ],
  "additionalProperties": true
} 